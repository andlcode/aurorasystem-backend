PORT=3000

# Supabase PostgreSQL
# Formato: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# JWT (use string longa e aleatória em produção)
JWT_SECRET="sua-chave-secreta-aqui"

# Chave para POST /auth/register (header x-register-secret)
REGISTER_SECRET="uma_chave"

# URL do frontend (para links de reset de senha)
# Mesma URL base para montar links: FRONTEND_URL/reset-password?token=...
# Ex: https://aurora.vercel.app
FRONTEND_URL="http://localhost:5173"

# CORS - permitir requisições do frontend
# CORS_ORIGIN: URL exata do frontend (ex: https://aurora.vercel.app)
# CORS_ORIGIN_REGEX: opcional, regex para previews (*.vercel.app)
CORS_ORIGIN=
CORS_ORIGIN_REGEX=\\.vercel\\.app$

# Frontend (Vite) - variável para o frontend apontar à API
# VITE_API_URL=https://aurorasystem-backend-production.up.railway.app

# SMTP (para envio de e-mails)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@example.com"
